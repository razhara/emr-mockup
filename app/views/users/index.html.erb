<div style="padding: 20px;">
  <h1>User List</h1>
  <a href="/"  style="margin-bottom: 10px;padding: 5px;"><button><- Home</button></a>

  <div class="main-content">
    <% @users.each do |user| %>
      <div style="display:flex;flex-direction:row;margin-top:20px;">
        <div><%= user.id %>. <%= user.name %></div>
        <%= link_to user_path(user), style: "margin-left:10px;" do %>
          <button> See Details </button>
        <%end%>
      </div>
    <% end %>
  </div>
  <%= link_to new_user_path do %>
    <button style="background-color: #0000FF;color: #FFFFFF; margin-top:20px;"> New User </button>
  <% end %>
</div>